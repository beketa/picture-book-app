{
  "compilerOptions": {
    "target": "es2019",
    "module": "es2020",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "lib": ["es2019", "dom"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./out",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false
  }
}